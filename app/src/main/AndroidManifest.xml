    <application
        android:name=".Connections.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.tabascoweb.cerocorrupciontabasco.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tabascoweb.cerocorrupciontabasco.Activitys.AcercaDeActivity"
            android:label="@string/ta_acerca_de"
            android:parentActivityName="com.tabascoweb.cerocorrupciontabasco.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tabascoweb.cerocorrupciontabasco.MainActivity" />
        </activity>
        <activity
            android:name="com.tabascoweb.cerocorrupciontabasco.Activitys.AvisoDePrivacidadActivity"
            android:label="@string/ta_aviso_de_privacidad"
