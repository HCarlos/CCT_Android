            android:parentActivityName="com.tabascoweb.cerocorrupciontabasco.Activitys.MisDenunciasActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tabascoweb.cerocorrupciontabasco.Activitys.MisDenunciasActivity" />
        </activity>
        <activity
            android:name="com.tabascoweb.cerocorrupciontabasco.Activitys.MisArchivosActivity"
            android:label="Mis Archivos"
            android:parentActivityName="com.tabascoweb.cerocorrupciontabasco.Activitys.MiDenunciaActivity"
            android:screenOrientation="portrait">
