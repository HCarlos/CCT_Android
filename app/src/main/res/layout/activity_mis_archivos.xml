<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:name=".PointsScreen"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    android:background="@drawable/retina_display_1242x2208"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activitys.MisArchivosActivity"
    >

    <include android:id="@+id/ActionBar4" layout="@layout/action_bar4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMisArchivos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:padding="8sp"
        />

    <ImageView
        android:id="@+id/imgArchivo"
        android:layout_width="1dip"
        android:layout_height="1dp" />

    <VideoView
        android:id="@+id/vidArchivo"
        android:layout_width="1dp"
        android:layout_height="1dp"
/>

</RelativeLayout>
